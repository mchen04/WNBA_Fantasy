{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "incremental": true,
    "paths": {
      "@shared/*": ["./shared/src/*"]
    }
  },
  "references": [
    { "path": "./shared" },
    { "path": "./backend" },
    { "path": "./worker" }
  ],
  "exclude": ["node_modules", "dist", "build", ".next"]
}