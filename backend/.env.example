# Backend Environment Variables
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/wnba_fantasy

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-generate-with-openssl-rand-base64-32
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRO_PRICE_ID=price_your_pro_price_id
STRIPE_PRO_PLUS_PRICE_ID=price_your_pro_plus_price_id

# ESPN API
ESPN_API_KEY=your-espn-api-key
ESPN_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/basketball/wnba

# Google OAuth (for verifying tokens)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Worker Configuration
ENABLE_BACKGROUND_JOBS=true
DATA_FETCH_CRON=*/30 * * * *
DAILY_RECOMMENDATIONS_CRON=0 6 * * *

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Sentry (optional)
SENTRY_DSN=

# Email (optional, for notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@wnbafantasy.com